{
  "manifest_version": 3,
  "name": "Easy Save Email Address",
  "version": "1.3",
  "description": "Saves email addresses from the current web page to a file you choose. All data stays on your computer.",
  "icons": {
    "16": "images/easy_email_16.png",
    "48": "images/easy_email_48.png",
    "128": "images/easy_email_128.png"
  },
  "permissions": ["activeTab"],
  "action": {
    "default_icon": {
      "16": "images/easy_email_16.png",
      "48": "images/easy_email_48.png",
      "128": "images/easy_email_128.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}